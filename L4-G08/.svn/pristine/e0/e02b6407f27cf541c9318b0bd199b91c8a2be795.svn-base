package Ahorcado.model;

import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;
import java.util.HashSet;
import java.util.Set;
import javax.imageio.ImageIO;
import javax.swing.JOptionPane;

public class AhorcadoModel {
    private String palabraSecreta;
    private Set<Character> letrasUsadas;
    private int fallos;
    private int puntuacion;
    private BufferedImage imagenAhorcado;
    private int estiloActual = 1; // 1, 2 o 3
    private Persona[] p_vec = new Persona[10];
    public static final int MAX_FALLOS = 5;
    private static int num_personas = 0;

    /*
    * Constructor del model sin parametros
    */
    public AhorcadoModel() {
        //this(""); // Llama al constructor con cadena vacía

        this.palabraSecreta = "";
        this.letrasUsadas = new HashSet<>();
        this.fallos = 0;
        this.puntuacion = 0;
        
        // PRIMERO: Encontrar dónde está la imagen
        buscarImagenEnTodoElProyecto();
    }

    private void buscarImagenEnTodoElProyecto() {
        System.out.println("=== BUSCANDO Inicio.png EN EL PROYECTO ===");
        System.out.println("Directorio actual: " + new File(".").getAbsolutePath());
        
        // Lista de posibles ubicaciones
        String[] posiblesRutas = {
            "Inicio.png",
            "src/Inicio.png",
            "../Inicio.png",
            "../src/Inicio.png",
            "Lab5/Inicio.png",
            "Lab5/src/Inicio.png",
            "src/es/uv/eu/Ahorcado/Inicio.png",
            "bin/Inicio.png",
            "build/Inicio.png"
        };
        
        for (String ruta : posiblesRutas) {
            File archivo = new File(ruta);
            if (archivo.exists()) {
                System.out.println("¡ENCONTRADO en: " + ruta);
                System.out.println("Ruta absoluta: " + archivo.getAbsolutePath());
                cargarImagenDesdeArchivo(archivo);
                return;
            }
            System.out.println("No encontrado en: " + ruta);
        }
        
        System.out.println("\n=== BUSQUEDA RECURSIVA ===");
        buscarRecursivamente(new File("."), "Inicio.png");
    }

    private void buscarRecursivamente(File directorio, String nombreArchivo) {
        File[] archivos = directorio.listFiles();
        if (archivos != null) {
            for (File archivo : archivos) {
                if (archivo.isDirectory()) {
                    buscarRecursivamente(archivo, nombreArchivo);
                } else if (archivo.getName().equals(nombreArchivo)) {
                    System.out.println("ENCONTRADO: " + archivo.getAbsolutePath());
                    cargarImagenDesdeArchivo(archivo);
                }
            }
        }
    }

    private void cargarImagenDesdeArchivo(File archivo) {
        try {
            imagenAhorcado = ImageIO.read(archivo);
            System.out.println("¡Imagen cargada exitosamente desde: " + archivo.getPath() + "!");
        } catch (Exception e) {
            System.err.println("Error cargando imagen: " + e.getMessage());
        }
    }

    /*
    * Constructor del model con parametros
    */
    public AhorcadoModel(String palabra) {
        this.palabraSecreta = palabra.toUpperCase();
        this.letrasUsadas = new HashSet<>();
        this.fallos = 0;
        this.puntuacion = 0;
        this.estiloActual = 1; // Estilo por defecto
        
        // Cargar imagen inicial según el estilo
        cargarImagenSegunEstiloYFallos();
    }

    /**
     * Carga la imagen según el estilo actual y número de fallos
     */
    private void cargarImagenSegunEstiloYFallos() {
        String nombreArchivo = "Fallo" + fallos + ".png";
        String rutaBase = "Lab 5 (Proyecto)/Lab5/src/Estilos/Estilo" + estiloActual + "/";
        String rutaCompleta = rutaBase + nombreArchivo;
        
        System.out.println("Intentando cargar imagen: " + rutaCompleta);
        
        try {
            File archivoImagen = new File(rutaCompleta);
            if (archivoImagen.exists()) {
                imagenAhorcado = ImageIO.read(archivoImagen);
                System.out.println("Imagen cargada: " + rutaCompleta);
            } else {
                // Si no existe la imagen de fallo, intentar con la imagen de inicio
                String rutaInicio = "Lab 5 (Proyecto)/Lab5/src/Inicio.png";
                archivoImagen = new File(rutaInicio);
                if (archivoImagen.exists()) {
                    imagenAhorcado = ImageIO.read(archivoImagen);
                    System.out.println("Imagen de inicio cargada: " + rutaInicio);
                } else {
                    System.err.println("No se encontró ninguna imagen");
                    crearImagenDeRespaldo("Estilo " + estiloActual + " - Fallo " + fallos);
                }
            }
        } catch (Exception e) {
            System.err.println("Error cargando imagen: " + e.getMessage());
            crearImagenDeRespaldo("Estilo " + estiloActual + " - Fallo " + fallos);
        }
    }

    /**
     * Establece el estilo actual (1, 2 o 3)
     */
    public void setEstilo(int estilo) {
        if (estilo >= 1 && estilo <= 3) {
            this.estiloActual = estilo;
            // Recargar imagen con el nuevo estilo
            cargarImagenSegunEstiloYFallos();
        }
    }

    /**
     * Procesa una letra introducida por el usuario
     */
    public boolean probarLetra(char letra, int estilo) {
        letra = Character.toUpperCase(letra);
        
        // Actualizar estilo si es diferente
        if (this.estiloActual != estilo) {
            setEstilo(estilo);
        }
        
        puntuacion++;

        if (letrasUsadas.contains(letra)) {
            return false; // Letra ya usada
        }

        letrasUsadas.add(letra);

        if (!palabraSecreta.contains(String.valueOf(letra))) {
            fallos++;
            // Cargar nueva imagen según fallos
            cargarImagenSegunEstiloYFallos();
            return false;
        }
        return true;
    }

    /**
     * Versiones específicas por estilo
     */
    public boolean probarLetraEstilo1(char letra) {
        return probarLetra(letra, 1);
    }

    public boolean probarLetraEstilo2(char letra) {
        return probarLetra(letra, 2);
    }

    public boolean probarLetraEstilo3(char letra) {
        return probarLetra(letra, 3);
    }

    /**
     * Crea imagen de respaldo
     */
    private void crearImagenDeRespaldo(String texto) {
        imagenAhorcado = new BufferedImage(400, 400, BufferedImage.TYPE_INT_ARGB);
        java.awt.Graphics2D g2d = imagenAhorcado.createGraphics();
        
        g2d.setColor(java.awt.Color.WHITE);
        g2d.fillRect(0, 0, 400, 400);
        g2d.setColor(java.awt.Color.BLACK);
        g2d.drawRect(0, 0, 399, 399);
        g2d.setColor(java.awt.Color.RED);
        g2d.setFont(new java.awt.Font("Arial", java.awt.Font.BOLD, 24));
        g2d.drawString(texto, 50, 100);
        g2d.dispose();
    }

    // GETTERS
    public BufferedImage getImagenAhorcado() {
        return imagenAhorcado;
    }

    public int getFallos() {
        return fallos;
    }

    public int getPuntuacion() {
        return puntuacion;
    }

    public Set<Character> getLetrasUsadas() {
        return letrasUsadas;
    }

    public String getPalabraSecreta() {
        return palabraSecreta;
    }

    public int getEstiloActual() {
        return estiloActual;
    }

    /**
     * Clase persona que contiene la informacion de una persona
     */
    public class Persona{
        private int intentos;
        private int ganar;
        private String nombre;
        private static int num = 0;
        
        /**
         * Constructor por defecto
         * @param n Nombre
         * @param ganar Si ha ganado o no
         * @param intentos Numero de intentos
         */
        public Persona(String n, int ganar, int intentos){
            this.nombre = n;
            this.ganar = ganar;
            this.intentos = intentos;
            num++;
        }

        /**
         * Getter de nombre
         * @return 
         */
       public String getNombre(){
           return this.nombre;
       }

       /**
        * Getter de intentos
        * @return 
        */
       public int getIntentos(){
           return this.intentos;
       }

       /**
        * Getter de si ha ganado o no
        * @return 
        */
       public int getGanar(){
           return this.ganar;
       }

       /**
        * Getter de numero de personas
        * @return 
        */
       public int getNum(){
           return num;
       }
    }

    /**
     * Funcion para agregar una persona en el array de jugadores
     * @param ganar si ha ganado o perdido
     * @param veces cuantos intentos
     */
    public void agregarRanking(int ganar, int veces){
        Persona p = new Persona(JOptionPane.showInputDialog(null,
                "Introduce el nombre del jugador 2 "), ganar, veces);
        Persona aux;
        
        p_vec[num_personas] = p;
        num_personas++; // Se suma 1 al total de personas que son contenidas en el array
        
        for(int i = 0; i < num_personas; i++){ // Se ordenan las entradas cada vez que se introduce un dato
            for(int j = 0; j < num_personas; j++){
                if(p_vec[j].getIntentos() > p_vec[i].getIntentos())
                {
                    aux = p_vec[i];
                    p_vec[i] = p_vec[j];
                    p_vec[j] = aux;
                }
            }
        }
    }

    /**
     * Devuelve el vector personas
     * @return 
     */
    public Persona[] mostrarRanking(){
        return p_vec;
    }
}