package Ahorcado.model;

import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;
import java.util.HashSet;
import java.util.Set;
import javax.imageio.ImageIO;
import javax.swing.JOptionPane;

/**
 * Modelo del juego del Ahorcado
 * Almacena únicamente el estado del juego
 * 
 * @author Inés Jaso Pernod
 * @author Natalia Tauste Rubio
 */
public class AhorcadoModel {

    private String palabraSecreta;
    private Set<Character> letrasUsadas;
    private int fallos;
    private int puntuacion;
    private BufferedImage imagenAhorcado;
    private String rutaImagen;
    private Persona[] p_vec = new Persona[10];
    public static final int MAX_FALLOS = 5;
    private static int num_personas = 0;

    /*
    * Constructor del model sin parametros
    */
    public AhorcadoModel() {
        this.palabraSecreta = "";
        this.letrasUsadas = new HashSet<>();
        this.fallos = 0;
        this.puntuacion = 0;
        
        // PRIMERO: Encontrar dónde está la imagen
        buscarImagenEnTodoElProyecto();
    }

    private void buscarImagenEnTodoElProyecto() {
        System.out.println("=== BUSCANDO Inicio.png EN EL PROYECTO ===");
        System.out.println("Directorio actual: " + new File(".").getAbsolutePath());
        
        // Lista de posibles ubicaciones
        String[] posiblesRutas = {
            "Inicio.png",
            "src/Inicio.png",
            "../Inicio.png",
            "../src/Inicio.png",
            "Lab5/Inicio.png",
            "Lab5/src/Inicio.png",
            "src/es/uv/eu/Ahorcado/Inicio.png",
            "bin/Inicio.png",
            "build/Inicio.png"
        };
        
        for (String ruta : posiblesRutas) {
            File archivo = new File(ruta);
            if (archivo.exists()) {
                System.out.println("¡ENCONTRADO en: " + ruta);
                System.out.println("Ruta absoluta: " + archivo.getAbsolutePath());
                cargarImagenDesdeArchivo(archivo);
                return;
            }
            System.out.println("No encontrado en: " + ruta);
        }
        
        System.out.println("\n=== BUSQUEDA RECURSIVA ===");
        buscarRecursivamente(new File("."), "Inicio.png");
    }

    private void buscarRecursivamente(File directorio, String nombreArchivo) {
        File[] archivos = directorio.listFiles();
        if (archivos != null) {
            for (File archivo : archivos) {
                if (archivo.isDirectory()) {
                    buscarRecursivamente(archivo, nombreArchivo);
                } else if (archivo.getName().equals(nombreArchivo)) {
                    System.out.println("ENCONTRADO: " + archivo.getAbsolutePath());
                    cargarImagenDesdeArchivo(archivo);
                }
            }
        }
    }

    private void cargarImagenDesdeArchivo(File archivo) {
        try {
            imagenAhorcado = ImageIO.read(archivo);
            System.out.println("¡Imagen cargada exitosamente desde: " + archivo.getPath() + "!");
        } catch (Exception e) {
            System.err.println("Error cargando imagen: " + e.getMessage());
        }
    }

    /*
    * Constructor del model con parametros
    */
    public AhorcadoModel(String palabra) {
        this.palabraSecreta = palabra.toUpperCase();
        this.letrasUsadas = new HashSet<>();
        this.fallos = 0;
        this.puntuacion = 0;
    }

    /**
     * Procesa una letra introducida por el usuario en el estilo 1
     */
    public boolean probarLetraEstilo1(char letra) {
        letra = Character.toUpperCase(letra);
        puntuacion++;

        if (letrasUsadas.contains(letra)) {
            return false;
        }

        letrasUsadas.add(letra);

        if (!palabraSecreta.contains(String.valueOf(letra))) {
            fallos++;
            cargarImagen("/Estilos/Estilo1/Fallo" + fallos + ".png");
            return false;
        }
        return true;
    }

    /**
     * Procesa una letra introducida por el usuario en el estilo 2
