package Ahorcado.view;

import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.event.ActionListener;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.SwingUtilities;

import Ahorcado.model.AhorcadoModel;

/**
 * 
 * @author InÃ©s Jaso Pernod
 * @author Natalia Tauste Rubio
 */

public class AhorcadoView extends JFrame {
    private AhorcadoMenuBar menu;
    private ImagenesPanel imagenesPanel;
    private ConfiguracionPanel configuracionPanel;
    private RankingPanel rank;
    private JuegoPanel juegoPanel;
    private GameCenterPanel gameCenterPanel;
    private GameSouthPanel gameSouthPanel;
    private ColorLetrasAdivPanel colorLetrasAdivPanel;
    private ColorLetrasUtilPanel colorLetrasUtilPanel;

    public AhorcadoView() {
        this.setLayout(new BorderLayout());
        this.setBackground(Color.WHITE);
        menu = new AhorcadoMenuBar();
        imagenesPanel = new ImagenesPanel();
        configuracionPanel = new ConfiguracionPanel();

        this.setJMenuBar(menu);
        this.add(imagenesPanel, BorderLayout.CENTER);
        this.add(configuracionPanel, BorderLayout.EAST);
        this.setVisible(true);
    }

    public void setActionListener(ActionListener al){
        menu.setActionListener(al);
        configuracionPanel.setActionListener(al);
    }

    /**
     * Metodo para entrar a la ventana de juego
     */
    public void postJuegoPanel(String palabraSecreta, int tamPalabra){
        this.remove(configuracionPanel);
        this.remove(imagenesPanel);

        gameCenterPanel = new GameCenterPanel(new AhorcadoModel(palabraSecreta));
        gameSouthPanel = new GameSouthPanel(tamPalabra);
        juegoPanel = new JuegoPanel(tamPalabra);

        juegoPanel.add(gameCenterPanel, BorderLayout.CENTER);
        juegoPanel.add(gameSouthPanel, BorderLayout.SOUTH);
        this.add(juegoPanel, BorderLayout.CENTER);
        this.setSize(600, 600);
        this.setVisible(true);
    }

    /**
     * Metodo para cerrar la ventana del ranking y volver a la inicial
     */
    public void closeRanking(){
        this.remove(rank);
        
        this.add(imagenesPanel, BorderLayout.CENTER);
        this.add(configuracionPanel, BorderLayout.EAST);
        this.setSize(600, 600);
        this.setVisible(true);
    }

    /**
     * Metodo para cerrar la ventana del ranking y volver a la inicial
     */
    public void closeJuegoPanel(){
        this.remove(juegoPanel);
        
        this.add(imagenesPanel, BorderLayout.CENTER);
        this.add(configuracionPanel, BorderLayout.EAST);
        this.setSize(600, 600);
        this.setVisible(true);
    }

    public String getTemaPalabra() {
        return configuracionPanel.getTemaPalabra();
    }

    public String getEstiloDibujo() {
        return configuracionPanel.getEstiloDibujo();
    }

    public String getColorLetrasAdiv() {
        return colorLetrasAdivPanel.getColorLetrasAdiv();
    }

    public String getColorLetrasUtil() {
        return colorLetrasUtilPanel.getColorLetrasUtil();
    }

    public char getLetraIntroducida() {
        return gameSouthPanel.getLetraIntroducida();
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> {
            JFrame frame = new JFrame("Prueba AhorcadoView");
            frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
            frame.setSize(600, 600);
            frame.add(new AhorcadoView());
            
            frame.setVisible(true);
        });
    }
}